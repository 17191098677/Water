<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/ed_verification"
        android:layout_width="@dimen/x650"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x215"
        android:background="@null"
        android:drawableBottom="@drawable/yzm_ed"
        android:minLines="1"
        android:singleLine="true"
        android:maxLength="6"
        android:layout_marginTop="@dimen/y180"/>
    <!--again是重新的意思 -->
    <Button
        android:id="@+id/bt_again_verification"
        android:layout_width="@dimen/x380"
        android:layout_height="wrap_content"
        android:text="重新获取验证码"
        android:textSize="@dimen/x40"
        android:background="@drawable/verification_bt_again"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y48"/>
    <EditText
        android:id="@+id/verification_ed_name"
        android:layout_width="@dimen/x984"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="昵称(1~16位,由数字,字母,中文组成)"
        android:background="@null"
        android:drawableBottom="@drawable/verification_ed"
        android:maxLength="16"
        android:minLines="1"
        android:textSize="@dimen/x40"
        android:singleLine="true"
        android:layout_marginTop="@dimen/y122"/>
    <EditText
        android:id="@+id/verification_ed_psw"
        android:layout_width="@dimen/x984"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:password="true"
        android:textSize="@dimen/x40"
        android:background="@null"
        android:layout_marginTop="@dimen/y60"
        android:drawableBottom="@drawable/verification_ed"
        android:singleLine="true"
        android:hint="密码(6~16位,由数字和字母组成)"
        android:maxLength="16"
        android:minLines="1"/>
    <!--confirm 确认-->
    <EditText
        android:id="@+id/ed_psw_confirm"
        android:layout_width="@dimen/x984"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:drawableBottom="@drawable/verification_ed"
        android:textSize="@dimen/x40"
        android:maxLength="16"
        android:password="true"
        android:layout_marginTop="@dimen/y60"
        android:singleLine="true"
        android:minLines="1"
        android:hint="确认密码由（6~16位，由数字和字母组成）"/>
    <Button
        android:id="@+id/bt_verification"
        android:layout_width="@dimen/x908"
        android:layout_height="@dimen/y116"
        android:background="@drawable/register_bt"
        android:layout_marginTop="@dimen/y150"
        android:layout_gravity="center_horizontal"
        android:text="验证"
        android:textColor="#fff"/>
</LinearLayout>
