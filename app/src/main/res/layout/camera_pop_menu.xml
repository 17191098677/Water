<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/y429"
       android:orientation="vertical"
       android:layout_marginTop="@dimen/y10">
       <LinearLayout
           android:id="@+id/linear"
           android:layout_width="@dimen/x1022"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:orientation="vertical"
           android:layout_gravity="center_horizontal">

           <Button
               android:id="@+id/btn_camera_pop_camera"
               android:layout_width="@dimen/x1022"
               android:layout_height="@dimen/y127"
               android:text="拍照"
               android:background="@drawable/btn_camera_pop_camera_back"/>
           <View
               android:layout_width="@dimen/x1022"
               android:layout_height="@dimen/y3"
               android:background="#d1d1d1"/>
           <Button
               android:id="@+id/btn_camera_pop_album"
               android:layout_width="@dimen/x1022"
               android:layout_height="@dimen/y127"
               android:text="从手机相册中选取"
               android:background="@drawable/btn_camera_pop_album_back"/>
       </LinearLayout>
       <Button
           android:id="@+id/btn_camera_pop_cancel"
           android:layout_width="@dimen/x1022"
           android:layout_height="@dimen/y126"
           android:layout_marginTop="@dimen/y28"
           android:text="取消"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/btn_camera_pop_cancel_back"/>
   </LinearLayout>


</RelativeLayout>