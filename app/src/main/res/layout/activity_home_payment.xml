<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".View.Activity.HomePaymentActivity">
    <include layout="@layout/tool_bar"/>
    <RelativeLayout
        android:id="@+id/bt_binding_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y230"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/y6">
            <TextView
                android:id="@+id/tv_recharge_payment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y61"
                android:textSize="@dimen/x54"
                android:layout_marginLeft="@dimen/x43"
                android:text="0639 6589 24"
                android:textColor="#282828"/>
            <TextView
                android:id="@+id/tv_recahrge_payment_binding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号绑定号码"
                android:layout_marginLeft="@dimen/x43"
                android:textColor="#656565"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y58"
            android:layout_marginLeft="@dimen/x1001"
            android:layout_centerVertical="true"
            android:src="@drawable/into"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y346"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y29">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入您要充值的金额"
            android:layout_marginLeft="@dimen/x43"
            android:layout_marginTop="@dimen/y86"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y40">
            <EditText
                android:id="@+id/ed_recharge"
                android:layout_width="@dimen/x913"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x43"
                android:hint="请输入您选择的金额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/x44" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/recharge_payment_bt"
        android:layout_width="@dimen/x1022"
        android:layout_height="@dimen/y115"
        android:layout_marginTop="@dimen/y86"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_bt_back"
        android:text="立即充值"
        android:textColor="#fff"/>
</LinearLayout>