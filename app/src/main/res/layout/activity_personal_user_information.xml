<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userInfomation"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".View.Activity.UserInformationActivity">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y126">
        <LinearLayout
            android:id="@+id/userInformation_head_imgLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_gravity="center_horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userInformation_head_img"
                android:layout_width="@dimen/x273"
                android:layout_height="@dimen/y275"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y86"
                android:src="@drawable/user_276"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击更换头像"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y40"
                android:layout_marginBottom="@dimen/y40"/>
        </LinearLayout>
        <include layout="@layout/user_phone"
            android:layout_marginTop="@dimen/y46"
            android:layout_height="@dimen/y253"
            android:layout_width="match_parent" />
        <include layout="@layout/userinformation_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y126"
            android:layout_marginTop="@dimen/y29"/>
    </LinearLayout>

</RelativeLayout>
