<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#00000000"
    tools:context=".View.Activity.HomeWaterKnowLedgeActivity">
    <include layout="@layout/tool_bar"/>
    <com.awarmisland.android.popularrefreshlayout.RefreshLayout
        android:id="@+id/home_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">
            <com.smartcityin.waterknow.Base.PushListView
                android:id="@+id/fragment_waterKnow_lv"
                android:layout_width="@dimen/x994"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:dividerHeight="@dimen/y3"
                android:layout_alignParentRight="true"
                android:scrollbars="none"
                android:paddingRight="@dimen/x30"></com.smartcityin.waterknow.Base.PushListView>
        </RelativeLayout>
    </com.awarmisland.android.popularrefreshlayout.RefreshLayout>
</LinearLayout>