<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.smartcityin.waterknow.View.Fragment.HomeFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        style="@style/Base.Widget.AppCompat.Toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y126">
            <!--orientation   定位-->
            <LinearLayout
                android:id="@+id/line_orientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/x42"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textSize="@dimen/x40"
                    android:maxEms="3"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#5aa3e2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/home_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y84"
                android:layout_marginLeft="@dimen/x29"
                android:layout_gravity="center_vertical"
                android:background="@drawable/home_search">
                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/search"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textSize="@dimen/x40"
                    android:textColor="#656565"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/home_img_information"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@drawable/information"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x42"
                android:layout_marginLeft="@dimen/x29"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <com.awarmisland.android.popularrefreshlayout.RefreshLayout
        android:id="@+id/home_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/home_xbanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y432"
                    android:layout_marginTop="@dimen/y21"
                    app:AutoPlayTime="2000"
                    app:pointNormal="@drawable/home_xbanner_normal"
                    app:pointSelect="@drawable/home_xbanner_selector"></com.stx.xhb.xbanner.XBanner>

                <GridView
                    android:id="@+id/home_grid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y268"
                    android:numColumns="4"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/y10"></GridView>
                <include layout="@layout/home_current_water_id"
                    android:layout_width="@dimen/x1023"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/y107"
                    android:layout_marginTop="@dimen/y24"/>
                <com.smartcityin.waterknow.Base.ListViewForScrollView
                    android:id="@+id/home_lv_waterID"
                    android:layout_width="@dimen/x1023"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#fff"
                    android:visibility="gone"
                    android:scrollbars="none"></com.smartcityin.waterknow.Base.ListViewForScrollView>
                <include
                    layout="@layout/home_balance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y512" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y84"
                    android:background="#fff"
                    android:paddingLeft="@dimen/x44"
                    android:text="智慧水务新闻"
                    android:textSize="@dimen/x44"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/y10"/>
                <com.smartcityin.waterknow.Base.ListViewForScrollView
                    android:id="@+id/home_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/y28"
                    android:scrollbars="none"></com.smartcityin.waterknow.Base.ListViewForScrollView>
            </LinearLayout>
        </ScrollView>
    </com.awarmisland.android.popularrefreshlayout.RefreshLayout>

</LinearLayout>
