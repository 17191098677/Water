<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_marginTop="@dimen/y41"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/invoice_img"
          android:layout_width="@dimen/x58"
          android:layout_height="@dimen/y58"
          android:src="@drawable/circle"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="@dimen/x43"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="@dimen/x42">
          <TextView
              android:id="@+id/myOrder_tv_yearTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/x40"
              android:textColor="#656565"
              android:text="201818"/>
          <TextView
              android:id="@+id/myOrder_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/x40"
              android:textColor="#656565"
              android:text="周三"
              android:layout_marginTop="@dimen/y25"
              android:layout_marginBottom="@dimen/y44"/>
      </LinearLayout>

  </LinearLayout>
    <TextView
        android:id="@+id/myOrder_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x40"
        android:textColor="#656565"
        android:layout_marginTop="@dimen/y41"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x50"/>
</RelativeLayout>
