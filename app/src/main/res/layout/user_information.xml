<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/personal_information_bt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y343"
    android:orientation="horizontal"
    android:background="#fff">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="@dimen/y343"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/use_head_img"
           android:layout_width="@dimen/x174"
           android:layout_height="@dimen/y174"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="@dimen/x58"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="@dimen/x28">
           <TextView
               android:id="@+id/tv_login_user"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="小胖"
               android:textSize="@dimen/x46"
               />
           <TextView
               android:id="@+id/tv_address"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="北京市昌平区十三陵镇王庄村临3号"
               android:textSize="@dimen/x40"/>
           <TextView
               android:id="@+id/personal_tv_waterNumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0639658924"
               android:textSize="@dimen/x46"/>
       </LinearLayout>
   </LinearLayout>
    <ImageView
        android:id="@+id/bt_start_details"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/y58"
        android:src="@drawable/gerenxinxiinto"
        android:background="#fff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x57"/>

</RelativeLayout>
