<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水表号 : "
                    android:textColor="#282828"
                    android:textSize="@dimen/x40"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="@dimen/x806"
                    android:layout_height="@dimen/y118"
                    android:orientation="horizontal"
                    android:background="@drawable/binding_water_ed_back"
                    android:layout_marginTop="@dimen/y40">
                    <EditText
                        android:id="@+id/ed_water_number"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/y118"
                        android:background="@null"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/x20"/>
                    <ImageView
                        android:id="@+id/img_scanning"
                        android:layout_width="@dimen/x75"
                        android:layout_height="@dimen/y75"
                        android:src="@drawable/richscanicon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
</LinearLayout>
