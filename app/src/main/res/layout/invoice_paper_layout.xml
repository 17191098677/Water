<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:layout_gravity="center_vertical"
            android:textColor="#282828"
            android:layout_marginLeft="@dimen/x56"
            android:textSize="@dimen/x44"/>
        <EditText
            android:id="@+id/paper_ed_Addressee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:background="@null"
            android:hint="填写收件人"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x40"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="@dimen/y6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:layout_gravity="center_vertical"
            android:textColor="#282828"
            android:layout_marginLeft="@dimen/x56"
            android:textSize="@dimen/x44"/>
        <EditText
            android:id="@+id/paper_ed_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x58"
            android:background="@null"
            android:hint="13691281866"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x40"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="@dimen/y6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:layout_gravity="center_vertical"
            android:textColor="#282828"
            android:layout_marginLeft="@dimen/x56"
            android:textSize="@dimen/x44"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x60"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--省--市--区"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="@dimen/y6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:layout_gravity="center_vertical"
            android:textColor="#282828"
            android:layout_marginLeft="@dimen/x56"
            android:textSize="@dimen/x44"/>
        <EditText
            android:id="@+id/paper_ed_detailedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x58"
            android:background="@null"
            android:hint="填写详细地址"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x40"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y92"
        android:text="开票余额不足200元，需支付邮费"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x56"
        android:textColor="#989898" />

        <RelativeLayout
            android:id="@+id/paper_payment_weChat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="#fff"
            android:layout_marginTop="@dimen/y29">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/y141"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="@dimen/x44"
                   android:layout_height="@dimen/y42"
                   android:src="@drawable/weixinzhifu"
                   android:layout_marginLeft="@dimen/x56"
                   android:layout_gravity="center_vertical"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="微信支付[全国8元,邮票发票会一同邮寄]"
                   android:textColor="#989898"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/x30"/>
           </LinearLayout>
            <CheckBox
                android:id="@+id/paper_payment_weChat_CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x87"
                android:button="@drawable/in_tool_payment_button"
                android:scaleX="0.65"
                android:scaleY="0.65"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/paper_payment_ZFB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="#fff"
            android:layout_marginTop="@dimen/y6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y141"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/y42"
                    android:src="@drawable/zhifubaozhifu"
                    android:layout_marginLeft="@dimen/x56"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付[全国8元,邮票发票会一同邮寄]"
                    android:layout_gravity="center_vertical"
                    android:textColor="#989898"
                    android:layout_marginLeft="@dimen/x30"/>
            </LinearLayout>
            <CheckBox
                android:id="@+id/paper_payment_ZFB_CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x87"
                android:button="@drawable/in_tool_payment_button"
                android:scaleX="0.65"
                android:scaleY="0.65"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/paper_payment_Delivery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="#fff"
            android:layout_marginTop="@dimen/y6">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_centerVertical="true">
               <ImageView
                   android:layout_width="@dimen/x44"
                   android:layout_height="@dimen/y42"
                   android:src="@drawable/huodaofukuan"
                   android:layout_marginLeft="@dimen/x56"
                   android:layout_gravity="center_vertical"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="货到付款[全国10元]"
                   android:layout_gravity="center_vertical"
                   android:textColor="#989898"
                   android:layout_marginLeft="@dimen/x30"/>
           </LinearLayout>
            <CheckBox
                android:id="@+id/paper_payment_Delivery_CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x87"
                android:button="@drawable/in_tool_payment_button"
                android:scaleX="0.65"
                android:scaleY="0.65"/>
        </RelativeLayout>
</LinearLayout>
