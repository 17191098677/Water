<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/waterlevel"
            android:layout_marginTop="@dimen/y38"
            android:layout_marginLeft="@dimen/x58"/>
        <TextView
            android:id="@+id/userWater_ladder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一阶"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y20"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/userWater_progress"
        android:layout_width="@dimen/x965"
        android:layout_height="@dimen/y18"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="@dimen/x58"
        android:layout_marginTop="@dimen/y34"
        android:progressDrawable="@drawable/userwater_progressbar_color"/>
    <RelativeLayout
        android:layout_width="@dimen/x965"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x58"
        android:layout_marginTop="@dimen/y20">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已使用"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userWater_tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#656565"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m³"
                    android:textColor="#656565"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水量总量"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userWater_tv_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#656565"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m³"
                    android:textColor="#656565"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
