<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y473"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x30"
            android:background="#fff">
            <com.smartcityin.waterknow.Base.WaterView
                android:id="@+id/home_Water"
                android:layout_width="@dimen/x350"
                android:layout_height="@dimen/x350"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y532"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x30">
            <LinearLayout
                android:layout_width="@dimen/x495"
                android:layout_height="@dimen/y220"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginLeft="@dimen/x30">
                <ImageView
                    android:layout_width="@dimen/x124"
                    android:layout_height="@dimen/y124"
                    android:src="@drawable/wallet"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水费余额"
                        android:textSize="@dimen/x34"
                        android:textColor="#282828"/>

                        <TextView
                            android:id="@+id/tv_water_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="36.29"
                            android:textColor="#0891d3"
                            android:textSize="@dimen/x58"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/x495"
                android:layout_height="@dimen/y222"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y30"
                android:background="#fff">
                <ImageView
                    android:layout_width="@dimen/x124"
                    android:layout_height="@dimen/y124"
                    android:src="@drawable/equipment"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备状态"
                        android:textSize="@dimen/x34"
                        android:textColor="#282828"/>
                        <TextView
                            android:id="@+id/home_tv_battery_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电池电量：100%"
                            android:textColor="#0891d3"
                            android:textSize="@dimen/x28"/>
                        <TextView
                            android:id="@+id/home_tv_signal_intensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信号强度：强"
                            android:textSize="@dimen/x28"
                            android:textColor="#0891d3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>